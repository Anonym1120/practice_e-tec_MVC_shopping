@using prjMyPrj.Models
@model prjMyPrj.Models.tMember

@{
    ViewBag.Title = "EditMember";
}

<h2>修改會員資料</h2>

@using (Html.BeginForm("EditMember", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>
        @Html.Hidden("fId", Model.fId)
        <div>
            <p>帳號 : @Html.EditorFor(model => model.fUserId)</p>
            <p>密碼 : @Html.EditorFor(model => model.fPassword)</p>
            <p>姓名 : @Html.EditorFor(model => model.fName)</p>
            <p>信箱 : @Html.EditorFor(model => model.fEmail)</p>
            <p>權限 : @Html.EditorFor(model => model.fLevel)</p>
            <p>狀態 : @Html.EditorFor(model => model.fUsing)</p>
        </div>
        <div>
            <input type="submit" value="修改"/>
        </div>
    </div>
}

